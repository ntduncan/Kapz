<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/headerTag')%>
    <script src="/js/main.js" defer></script>
    <title>ProductList</title>
</head>
<body>
    <%- include('partials/nav') %>
    <div class="parallax-sm">
        
    </div>
    <section class="content-container p-0">
       <div class="row m-5">
               <% products.forEach(product => { %>
                <div class="card bg-dark text-light m-3" style="max-width: 20rem;">
                    <img src="<%=product.img%>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h4 class="card-title"><%=product.title%></h4>
                        <hr />
                        <p class="card-text">
                            <div class="row">
                                <div class="col">Price: $<%=product.price%></div>
                                <div class="col">Qty: <%=product.quantity%></div>
                            </div>
                        </p>
                    </div>
                </div>
               <% })%>
               <div class="card bg-dark text-light m-3" style="max-width: 18rem; min-height: 18rem;" id="addNewProduct">
                <div class="card-body align-items-center justify-content-center">
                    <h4 class="card-title">Add New Product</h4>
                </div>
            </div>
       </div>
    </section>
    <div class="parallax-sm"></div>
    
</body>
</html>